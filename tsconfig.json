{
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": [
      "es2016",
      "es2017"
    ],
    "typeRoots": [
      "./declarations"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "es6",
    "inlineSourceMap": true,
  },
  "exclude": [
    "node_modules"
  ]
}